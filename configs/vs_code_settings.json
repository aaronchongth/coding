{
    // cpp lint
    "cpplint.filters": [
        "-build/c++11",
        "-build/c++14",
        "-build/include_subdir"
    ],
    "C_Cpp.intelliSenseEngine": "Default",
    // Editor
    "editor.fontSize": 14,
    "editor.tabSize": 2,
    "editor.renderWhitespace": "all",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.minimap.showSlider": "always",
    "editor.rulers": [
        100
    ],
    "editor.fontFamily": "Ubuntu Mono",
    // Formatting
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, UseTab: Always, AccessModifierOffset: -4, IndentWidth: 4, CompactNamespaces: true, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: true, ColumnLimit: 0, TabWidth: 4, PointerAlignment: Left, AlignAfterOpenBracket: Align, BreakBeforeBraces: Custom, BraceWrapping: {AfterClass: true, AfterControlStatement: true, AfterEnum: true, AfterFunction: true, AfterNamespace: false, AfterObjCDeclaration: true, AfterStruct: true, AfterUnion: true, BeforeCatch: true, BeforeElse: true, IndentBraces: false}, BreakConstructorInitializers: BeforeComma}",
    // Behaviour
    "workbench.list.openMode": "doubleClick",
    "workbench.editor.enablePreview": false,
    // Interface
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/.DS_Store": false
    },
    "explorer.openEditors.visible": 0,
    "explorer.autoReveal": false,
    "window.zoomLevel": 0,
    "workbench.startupEditor": "newUntitledFile",
    "latex-workshop.view.pdf.viewer": "tab",
    // python
    "python.jediEnabled": false,
    "python.formatting.provider": "autopep8"
}
